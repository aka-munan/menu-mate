<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/colorOnSecondary</item>
    </style>

    <style name="Widget.App.TonalButton" parent="Widget.Material3.Button.TonalButton">
        <item name="android:backgroundTint">@color/colorSurfaceContainerHigh</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
    </style>

    <style name="Widget.Login.TextView" parent="">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textColorHint">#6A696A</item>
    </style>
<style name="ShapeAppearance.App.RoundedTop_Right" parent="ShapeAppearance.Material3.Corner.None">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeTopRight">16dp</item>
</style>
    <style name="Widget.App.TextView" parent="">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textColorHint">#6A696A</item>
        <item name="android:drawableTint">@color/colorDark</item>
    </style>
    <style name="Widget.App.TextView.Title" parent="Widget.App.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="Widget.App.TextView.Rounded.Outline" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="android:background">@drawable/text_view_background_round</item>
        <item name="android:padding">12dp</item>
    </style>
<style name="Widget.App.TextView.InvertedColor">
    <item name="android:textColor">@color/colorDark</item>
</style>
    <style name="Widget.Login.TextInput" parent="@style/Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textColorHint">#6A696A</item>
        <item name="hintTextColor">#6A696A</item>
    </style>

    <style name="ShapeAppearance.App.Rounded_Top" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
    </style>

    <style name="ShapeAppearance.App.Rounded_right" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

    <style name="ShapeAppearance.App.Rounded" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.Rounded_24" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="Widget.App.Button.ElevatedButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:drawableTint">@color/colorDark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="elevatedButton" parent="Widget.Material3.Button">
        Â 
        <item name="android:elevation">3dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:textColor">?attr/colorSurface</item>
    </style>

    <style name="googleButton" parent="elevatedButton">
        <item name="android:textColor">#5C5F61</item>
        <item name="icon">@drawable/ic_google_logo</item>
        <item name="iconSize">25dp</item>
        <item name="android:backgroundTint">@drawable/google_btn_background</item>
        <item name="rippleColor">#C5C7C9</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="twitterButton" parent="elevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="icon">@drawable/ic_twitter_logo</item>
        <item name="android:backgroundTint">@drawable/twitter_btn_background</item>
        <item name="iconSize">25dp</item>
        <item name="iconTint">@color/white</item>
    </style>

</resources>